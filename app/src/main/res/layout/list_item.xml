<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="6dp">



    <TextView
        android:id="@+id/stringTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/set_time"
        android:textSize="30sp"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/stringWeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/set_week"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/stringTime"
        app:layout_constraintHorizontal_bias="0.01"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/alarmName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/timer_name"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="@+id/stringTime"
        app:layout_constraintBottom_toBottomOf="@+id/stringWeek"
        app:layout_constraintLeft_toLeftOf="@+id/stringTime"
        app:layout_constraintRight_toRightOf="parent"/>


    <TextView
        android:id="@+id/delButton"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="長押し削除"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@+id/stringTime"
        app:layout_constraintBottom_toBottomOf="@+id/stringWeek"
        app:layout_constraintRight_toRightOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>